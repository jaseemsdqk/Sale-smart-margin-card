<odoo>
    <record id="view_res_config_settings_sale_smart_margin_card" model="ir.ui.view">
        <field name="name">res.config.settings.sale.dashboard</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pricing_setting_container']" position="inside">
                <setting id="dashboard_overhead_configuration"
                    title="Margin Card Overhead"
                    help="Configure default overhead calculation for Smart Margin Card. This can be a fixed amount per unit (e.g. 5) or a percentage of product cost (e.g. 7 for 7%).">
                    <field name="dashboard_overhead_type"/>
                    <field name="dashboard_overhead_value"/>
                    <field name="dashboard_overhead_category_id"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
